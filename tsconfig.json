{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "declaration": true,
    "outDir": "lib",
    "noImplicitAny": true,
    "strict": true,
    "rootDir": "src",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "files": [
    "src/index.ts",
  "src/writer.ts",
  "src/reader.ts",
"src/conventions.ts",
"src/config.ts"],
  "exclude": ["node_modules", "dist"]
}
